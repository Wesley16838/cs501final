<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".PersonalInformation">
    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="25dp"
        >

        <View
            android:layout_alignParentLeft="true"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            />

        <LinearLayout
            android:id="@+id/layoutStatusstudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@drawable/rectangle_fill"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1" />
            <View
                android:background="@drawable/rectangle_non"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <View
                android:background="@drawable/rectangle_non"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/layoutStatusemployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:background="@drawable/rectangle_fill"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1" />
            <View
                android:background="@drawable/rectangle_non"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <View
                android:background="@drawable/rectangle_non"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <View
                android:background="@drawable/rectangle_non"
                android:layout_width="30dp"
                android:layout_height="30dp"
                />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Information" />
    <TextView
        android:id="@+id/fullname"
        android:textSize="16dp"
        android:textStyle="normal"
        android:textColor="#000"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Information" />
    <TextView
        android:id="@+id/email"
        android:textSize="16dp"
        android:textStyle="normal"
        android:textColor="#A2A2A2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Information"
        android:layout_marginBottom="15dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        app:cardCornerRadius="3dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:paddingRight="30dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="left"
                android:text="Summary"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:text="Write about yourself in 3rd person"
                android:textColor="#9B9B9B"
                android:textSize="16dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/summary"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_border"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:nextFocusForward="@+id/headline"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="left"
                android:text="Headline"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:text="Ex.Web design with 2 years experience"
                android:textColor="#9B9B9B"
                android:textSize="16dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/headline"
                android:layout_width="275dp"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_border"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:imeOptions="actionDone"
                android:singleLine="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:gravity="left"
                android:text="Profile Image"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="left"
                android:text="Please upload your image"
                android:textColor="#9B9B9B"
                android:textSize="16dp"
                android:textStyle="normal" />

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                app:cardCornerRadius="60dp"
                app:cardElevation="0dp">

                <ImageButton
                    android:id="@+id/addImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/roundimagebtn"
                    android:cropToPadding="true"
                    android:padding="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/addbtn" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >

        <Button
            android:id="@+id/next"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/round_bg"
            android:textColor="#fff"
            android:text="Next" />
    </RelativeLayout>
</LinearLayout>